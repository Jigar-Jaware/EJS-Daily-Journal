<%- include('partials/header'); %> 
    <section>

        <div class="container mb-5">
            <h1 class="text-capitalize text-center pt-5">Compose</h1>
            <hr class=" w-25 mx-auto pt-5 ">

            <div class="w-50 mx-auto">
                <form action="/compose" method="POST">
                    <div class="form-group">
                        <label for="name">Title</label>
                        <input type="text" class="form-control" placeholder="Title" id="name"
                           name="postTitle" autocomplete="off">
                    </div>
                    
                    </div>
                    <div class="form-group">
                        <label for="textarea">Post</label>
                        <textarea class="form-control" name="postBody"></textarea>
                    </div>
                    
                    <button type="submit" class="btn btn-primary">Submit</button>
                </form>
            </div>
        </div>
    </section>

